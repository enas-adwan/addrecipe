<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/addrecipe"
    tools:context="com.example.hp.navigation.activity.AddRecipe"
    android:weightSum="1">

    <!--   <ScrollView
           android:layout_width="match_parent"
           android:layout_height="683dp"
           android:id="@+id/scrollView"
           android:layout_marginLeft="10dp">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f1eeee"
        android:paddingLeft="10dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="156dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Recipe Name :"
                android:id="@+id/textView"
                android:elegantTextHeight="false"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textStyle="normal|italic"
                android:layout_marginTop="10dp"
                android:allowUndo="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:dividerPadding="@dimen/abc_action_bar_progress_bar_size">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/t" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Add Ingredient :"
                android:id="@+id/textView2"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textStyle="normal|italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">


            <Spinner
                android:layout_width="72dp"
                android:layout_height="fill_parent"
                android:id="@+id/spinner1"
                android:entries="@array/country_arrays"
                android:layout_weight="398376.09" />

            <AutoCompleteTextView
                android:id="@+id/auto"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_alignParentTop="true"
                android:ems="10"
                android:completionThreshold="1"
                android:text=""
                android:layout_alignParentStart="false"
                android:layout_weight="488010.69"
                android:layout_alignParentLeft="false">

                <requestFocus />
            </AutoCompleteTextView>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/getall"
                android:background="@null"
                android:src="@android:drawable/ic_menu_add"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="225005.86"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Auto Calculate Calories :  "
                android:id="@+id/textView3"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textStyle="bold|italic"
                android:textColor="#333131"
                android:textSize="15dp" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/text"
                android:layout_toEndOf="@+id/textView"
                android:layout_below="@+id/getall"
                android:textAlignment="textStart"
                android:layout_gravity="start"
                android:textStyle="bold"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textColor="#bf801919"
                android:textSize="15dp"
                android:layout_toRightOf="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="kcal"
                android:id="@+id/kcal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:minHeight="@dimen/abc_button_padding_horizontal_material"
                android:id="@+id/list_view"
                android:fastScrollEnabled="false"
                android:fastScrollAlwaysVisible="false"
                android:smoothScrollbar="false"
                android:stackFromBottom="false"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:weightSum="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="select photo"
                android:id="@+id/bb"
                android:layout_marginTop="30dp"
                style="@android:style/Theme.NoTitleBar.Fullscreen"
                android:background="#baaeae"
                android:layout_marginLeft="70dp"
                android:allowUndo="false" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="70dp"
                android:scaleType="centerCrop" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose File"
                android:id="@+id/button" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Recipe Time :"
                android:id="@+id/textVi"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textStyle="normal|italic" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="prep time"
                android:id="@+id/textView5"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textStyle="bold|italic"
                android:textColor="#333131" />

            <EditText
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/prep" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Min"
                android:id="@+id/textView75"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textStyle="bold"
                android:textColor="#333131" />
            <TextView
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:text="cooking time"
                android:id="@+id/textView6"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textStyle="bold|italic"
                android:textColor="#333131"
                android:layout_marginLeft="60dp" />

            <EditText
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/cook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Min"
                android:id="@+id/textView7"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textStyle="bold"
                android:textColor="#333131" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Directions:"
                android:id="@+id/textkVi"
                android:layout_marginTop="10dp"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textStyle="normal|italic" />



        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textnum"
                android:fontFamily="@string/abc_font_family_button_material"
                android:textStyle="bold|italic"
                android:textColor="#333131"
                android:text="1-" />

            <EditText
                android:layout_width="263dp"
                android:layout_height="wrap_content"
                android:id="@+id/desc"
                android:layout_weight="52691.25" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/addd"
                android:background="@null"
                android:src="@android:drawable/ic_menu_add"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="225005.86"
                android:scaleType="fitCenter" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:minHeight="@dimen/abc_button_padding_horizontal_material"
                android:id="@+id/list_v"
                android:fastScrollEnabled="false"
                android:fastScrollAlwaysVisible="false"
                android:smoothScrollbar="false"
                android:stackFromBottom="false"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
