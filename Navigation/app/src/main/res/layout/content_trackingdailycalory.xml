<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"


    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.navigation.activity.trackingdailycalory"
    android:orientation="vertical"
    android:background="#e2d6d6">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:text="Daily Calorie Needed : "
            android:id="@+id/textView14"
            android:textColor="#3a3838"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:text="Small Text"
            android:id="@+id/text"
            android:textColor="#3a3838"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:text=" Kcal "
            android:id="@+id/textView23"
            android:textColor="#3a3838"
            android:textStyle="bold|italic" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Consuming Calories : "
            android:id="@+id/textView15"
            android:textColor="#3a3838"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textc"
            android:textColor="#3a3838"
            android:text="0"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:text=" Kcal "
            android:id="@+id/textView26"
            android:textColor="#3a3838"
            android:textStyle="bold|italic" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Remaning Calories : "
            android:id="@+id/textView16"
            android:textColor="#3a3838"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textr"
            android:textColor="#3a3838"
            android:text="0"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:text=" Kcal "
            android:id="@+id/textView25"
            android:textColor="#3a3838"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Ingredient :"
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/abc_font_family_button_material"
        android:textStyle="normal|italic"
        android:textColor="#3a3838" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="end">

        <Spinner
            android:layout_width="67dp"
            android:layout_height="80dp"
            android:id="@+id/spinner1"
            style="@style/mySpinnerItemStyle"
            android:entries="@array/country_arrays" />

        <Spinner
            android:layout_width="60dp"
            android:entries="@array/amount"
            android:layout_height="50dp"

            android:id="@+id/spinner2" />

        <AutoCompleteTextView
            android:id="@+id/auto"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:completionThreshold="1"
            android:text=""
            android:layout_alignParentStart="false"
            android:layout_weight="488010.69"
            android:layout_alignParentLeft="false"
            android:textColor="#3a3838">

            <requestFocus />
        </AutoCompleteTextView>

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="50dp"
            android:id="@+id/getall"
            android:background="@null"
            android:src="@android:drawable/ic_menu_add"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Add Recipe :"
        android:id="@+id/textView22"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/abc_font_family_button_material"
        android:textStyle="normal|italic"
        android:textColor="#3a3838" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:showDividers="end">

        <Spinner
            android:layout_width="67dp"
            android:layout_height="51dp"
            android:id="@+id/spinner3"
           style="@style/mySpinnerItemStyle"
            android:entries="@array/amount"/>

        <AutoCompleteTextView
            android:id="@+id/auto1"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:completionThreshold="1"
            android:text=""
            android:layout_alignParentStart="false"
            android:layout_weight="488010.69"
            android:layout_alignParentLeft="false">

            <requestFocus />
        </AutoCompleteTextView>
        <ImageButton
            android:layout_width="79dp"
            android:layout_height="50dp"
            android:id="@+id/getall2"
            android:background="@null"
            android:src="@android:drawable/ic_menu_add"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:minHeight="@dimen/abc_button_padding_horizontal_material"
        android:id="@+id/list_view"
        android:fastScrollEnabled="false"
        android:fastScrollAlwaysVisible="false"
        android:smoothScrollbar="false"
        android:stackFromBottom="false"
        android:nestedScrollingEnabled="false" />

</LinearLayout>
</ScrollView>