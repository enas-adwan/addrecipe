<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.navigation.activity.oldTraking"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="10dp"
        style="@style/AppTheme.AppBarOverlay"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#dac8c8">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="10dp">

            <com.example.hp.navigation.activity.NativelyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:text="Daily Calorie Needed : "
                android:id="@+id/textView14"
                android:textColor="#360b0b"
                android:textStyle="bold|italic"
                android:layout_marginLeft="8dp" />

            <com.example.hp.navigation.activity.NativelyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:text="Small Text"
                android:id="@+id/text"
                android:textColor="#360b0b"
                android:textStyle="bold" />
            <com.example.hp.navigation.activity.NativelyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:text=" Kcal "
                android:id="@+id/textView23"
                android:textColor="#360b0b"
                android:textStyle="bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <com.example.hp.navigation.activity.NativelyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Consuming Calories : "
                android:id="@+id/textView15"
                android:textColor="#360b0b"
                android:textStyle="bold|italic"
                android:layout_marginLeft="8dp" />

            <com.example.hp.navigation.activity.NativelyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:text=" Kcal "
                android:id="@+id/calorySum"
                android:textColor="#360b0b"
                android:textStyle="bold|italic" />

            <com.example.hp.navigation.activity.NativelyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textc"
                android:textColor="#360b0b"
                android:text=" kcal"
                android:textStyle="bold" />

        </LinearLayout>

        <com.example.hp.navigation.activity.NativelyCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="----------------"
            android:id="@+id/textView17"
            android:layout_marginLeft="140dp"
            android:textColor="#360b0b" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <com.example.hp.navigation.activity.NativelyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Remaning Calories : "
                android:id="@+id/textView16"
                android:textColor="#360b0b"
                android:textStyle="bold|italic"
                android:layout_marginLeft="8dp" />

            <com.example.hp.navigation.activity.NativelyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textr"
                android:textColor="#360b0b"
                android:text="0"
                android:textStyle="bold" />
            <com.example.hp.navigation.activity.NativelyCustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:text=" Kcal "
                android:id="@+id/textView25"
                android:textColor="#360b0b"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:layout_marginTop="15dp">

        <com.example.hp.navigation.activity.NativelyCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Comment:"
            android:id="@+id/textView18"
            android:layout_marginLeft="8dp"
            android:textSize="20dp" />

        <com.example.hp.navigation.activity.NativelyCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Good Job !"
            android:id="@+id/comment"
            android:textColor="#026304"
            android:textSize="20dp"
            android:layout_marginLeft="13dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/food"
        android:layout_marginTop="10dp"
        android:fontFamily="@string/abc_font_family_button_material"
        android:textStyle="normal|italic"
        android:textColor="#360b0b"
        android:layout_marginLeft="8dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Food have been eaten that day :"
        android:id="@+id/textView22"
        android:layout_marginTop="5dp"
        android:fontFamily="@string/abc_font_family_button_material"
        android:textStyle="normal|italic"
        android:textColor="#360b0b"
        android:layout_marginLeft="8dp" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="491dp"
        android:alwaysDrawnWithCache="true"
        android:dividerHeight="1dp"
        android:horizontalSpacing="3dp"
        android:scrollingCache="true"
        android:smoothScrollbar="true"
        android:stretchMode="columnWidth"
        android:verticalSpacing="3dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">
    </ListView>

</LinearLayout>