<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.eodwan.showrecipe.Sec"
    tools:showIn="@layout/activity_sec"
    android:background="#f1eeee"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imagev"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/t"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name:"
                android:id="@+id/textView"
                android:textColor="#333131" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/title1"
                android:layout_below="@+id/textt"
                android:layout_weight="0.14"
                android:textColor="#333131"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total Calories:"
                android:id="@+id/textView2"
                android:textColor="#333131" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/calory1"
                android:layout_below="@+id/desc1"
                android:layout_alignBottom="@+id/desc1"
                android:textColor="#bf801919" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">




        <TextView
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ingredient:"
            android:id="@+id/textViewaa"
            android:textColor="#333131"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/integ"
            android:layout_weight="0.13" />
        <TextView
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Direction:"
            android:id="@+id/textViewaahg"
            android:textColor="#333131"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/desc1"
           />
        <TextView
            android:layout_width="253dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Recipe times:"
            android:id="@+id/textVihjhewaahg"
            android:textColor="#333131"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textt"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/prep1"
            android:layout_below="@+id/desc1"
            android:layout_alignEnd="@+id/calory1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/cook1"
            android:layout_below="@+id/prep1"
            android:layout_alignEnd="@+id/prep1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/total1"
            android:layout_below="@+id/cook1"
            android:layout_alignEnd="@+id/cook1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="timer total"
                android:id="@+id/totalbutton"
                android:layout_below="@+id/cook1"
                android:layout_toEndOf="@+id/cook1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/t"
                android:layout_below="@+id/total1"
                android:layout_toEndOf="@+id/totalbutton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="stop "
                android:id="@+id/stop"
                android:layout_alignTop="@+id/totalbutton"
                android:layout_alignStart="@+id/t" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
